{{#promotions?}}
  <div id="promotions">
    <h3>{{translate text='promotions'}}</h3>
    {{#promotions}}
      <div class="well well-sm">
        <h4>{{name}}</h4>
        <p>{{description}}</p>
        {{#products?}}
          <ul>
            {{#products}}
              <li>{{product_link}}</li>
            {{/products}}
          </ul>
        {{/products?}}
      </div>
    {{/promotions}}
  </div>
{{/promotions?}}
